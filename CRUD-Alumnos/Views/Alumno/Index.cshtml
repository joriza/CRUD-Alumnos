@model IEnumerable<CRUD_Alumnos.Models.Alumno>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Alumnos</h2>

<p>
    @*@Html.ActionLink("Crear Nuevo", "Agregar")*@
    @*@Html.ActionLink("Crear Nuevo", "Agregar", null, new { @Style = "color:red" }) // Probando agregar estilos, en este caso solo un color*@
    @Html.ActionLink("Crear Nuevo", "Agregar", null, new { @class = "btn btn-primary" }) <!-- // Boton Bootstrap -->
</p>
<table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    @if (item.Sexo == "M")
                    {
                        <span>Masculino</span>
                    }
                    else
                    {
                        <span>Femenino</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @Style = "color:yellow" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @Style = "color:green" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @Style = "color:red" }) |
                </td>
            </tr>
        }

</table>
